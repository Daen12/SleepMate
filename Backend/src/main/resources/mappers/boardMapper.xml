<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.YogaMate.model.dao.BoardDao">
    <!-- 모든 게시글 가져오기 -->
    <select id="selectAll" parameterType="Integer" resultType="Board">
        SELECT *
        FROM board
        ORDER BY regdate DESC
        LIMIT #{pageNum}, 10;
    </select>

    <!-- 게시글 작성 -->
    <insert id="writeArticle" parameterType="Board">
        INSERT INTO board (classnum, title, content, writer)
        VALUES (#{classnum}, #{title}, #{content}, #{writer})
    </insert>

    <!-- 게시판 글 상세보기 -->
    <select id="readArticle" parameterType="Integer" resultType="Board">
        SELECT *
        FROM board
        WHERE idx = #{idx}
    </select>

    <!-- 게시판 글 업데이트 -->
    <update id="updateArticle" parameterType="Board">
        UPDATE board
        SET classnum = #{classnum}, title = #{title}, content = #{content}, regdate = now()
        WHERE idx = #{idx}
    </update>

    <!-- 게시판 글 삭제 -->
    <delete id="deleteArticle" parameterType="Integer">
        DELETE FROM board
        WHERE idx = #{idx}
    </delete>

    <!-- 게시글 조회수 1 증가 -->
    <update id="updateViewCnt" parameterType="Integer">
        UPDATE board
        SET viewcnt = viewcnt + 1
        WHERE idx = #{idx}
    </update>
</mapper>